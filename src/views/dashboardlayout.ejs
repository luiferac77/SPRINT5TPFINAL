<main class="flex-grow container mx-auto px-4 py-8">
    <div class="w-full">
        <a href="/api/paises/crear">
            <button class=" bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded focus:outline-none focus:ring focus:ring-blue-300">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
                </svg>                  
                <span>Agregar pais</span>
            </button>
        </a>
    </div>
    <% if (paises && paises.length > 0) { %>
        <section class="w-full">
            <table class="w-full border-collapse border border-gray-300">
                <thead class="bg-gray-200">
                    <th class="border border-gray-300 p-2 text-gray-800">Nombre oficial</th>
                    <th class="border border-gray-300 p-2 text-gray-800">Capital</th>
                    <th class="border border-gray-300 p-2 text-gray-800">fronteras</th>
                    <th class="border border-gray-300 p-2 text-gray-800">Área</th>
                    <th class="border border-gray-300 p-2 text-gray-800">Población</th>
                    <th class="border border-gray-300 p-2 text-gray-800">Índice Gini</th>
                    <th></th>
                    <th></th>
                </thead>
                <tbody>
                    <% paises.forEach( pais => { %>
                        <tr class="bg-white">
                            <td class="border border-gray-300 p-2 text-gray-800"><%= pais.name.official %></td>
                            <td class="border border-gray-300 p-2 text-gray-800"><%= pais.capital %></td>
                            <td class="border border-gray-300 p-2 text-gray-800"><%= pais.borders %></td>
                            <td class="border border-gray-300 p-2 text-gray-800"><%= pais.area %></td>
                            <td class="border border-gray-300 p-2 text-gray-800"><%= pais.population %></td>
                            <td class="border border-gray-300 p-2 text-gray-800"><%= pais.gini?.[2019] || 'N/A' %></td>
                            <td>
                                <a href="/api/paises/modificar/<%= pais._id %>">
                                    <button class="btn btn-warning btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                                            <path d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-8.4 8.4a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32l8.4-8.4Z" />
                                            <path d="M5.25 5.25a3 3 0 0 0-3 3v10.5a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3V13.5a.75.75 0 0 0-1.5 0v5.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5V8.25a1.5 1.5 0 0 1 1.5-1.5h5.25a.75.75 0 0 0 0-1.5H5.25Z" />
                                        </svg>
                                    </button>
                                </a>
                            </td>
                            <td>
                                <a href="/api/paises/eliminar/<%= pais._id %>">
                                    <button class="btn btn-danger btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                                            <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
                                        </svg>
                                    </button>
                                </a>
                        </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    <% } else { %>
        <p>No hay paises para mostar</p>
    <% } %>
</main>